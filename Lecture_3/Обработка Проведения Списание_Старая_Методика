
Процедура ОбработкаПроведения(Отказ, Режим)
	//{{__КОНСТРУКТОР_ДВИЖЕНИЙ_РЕГИСТРОВ
	// Данный фрагмент построен конструктором.
	// При повторном использовании конструктора, внесенные вручную изменения будут утеряны!!!
	//}}__КОНСТРУКТОР_ДВИЖЕНИЙ_РЕГИСТРОВ
	
	Движения.ОстаткиНоменклатуры.Записать();
	
	//Вставляем  из Синтакс-помощника Шаблон
	
	//Блокировка = Новый БлокировкаДанных;
	//ЭлементБлокировки = Блокировка.Добавить("РегистрНакопления.ТоварыНаСкладах");
	//ЭлементБлокировки.УстановитьЗначение("Качество", Справочники.Качество.НайтиПоКоду("1"));
	//ЭлементБлокировки.Режим = РежимБлокировкиДанных.Исключительный;
	//ЭлементБлокировки.ИсточникДанных = ДокументОбъект.ВозвратнаяТара;
	//ЭлементБлокировки.ИспользоватьИзИсточникаДанных("Номенклатура", "Номенклатура");
	//ЭлементБлокировки.ИспользоватьИзИсточникаДанных("Склад", "Склад");
	//Блокировка.Заблокировать();	 
	
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	РасходнаяНакладнаяСписокНоменклатуры.Номенклатура КАК Номенклатура,
	|	СУММА(РасходнаяНакладнаяСписокНоменклатуры.Количество) КАК Количество
	|ПОМЕСТИТЬ ТекДокТЧ
	|ИЗ
	|	Документ.РасходнаяНакладная.СписокНоменклатуры КАК РасходнаяНакладнаяСписокНоменклатуры
	|ГДЕ
	|	РасходнаяНакладнаяСписокНоменклатуры.Ссылка = &Ссылка
	|	И РасходнаяНакладнаяСписокНоменклатуры.Номенклатура.ВидНоменклатуры = &ВидНоменклатуры
	|
	|СГРУППИРОВАТЬ ПО
	|	РасходнаяНакладнаяСписокНоменклатуры.Номенклатура
	|
	|ИНДЕКСИРОВАТЬ ПО
	|	Номенклатура
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ТекДокТЧ.Номенклатура КАК Номенклатура,
	|	ТекДокТЧ.Количество КАК Количество,
	|	ЕСТЬNULL(ОстаткиНоменклатурыОстатки.КоличествоОстаток, 0) КАК КоличествоОстаток,
	|	ЕСТЬNULL(ОстаткиНоменклатурыОстатки.СуммаОстаток, 0) КАК СуммаОстаток,
	|	ТекДокТЧ.Номенклатура.Представление КАК НоменклатураПредставление
	|ИЗ
	|	ТекДокТЧ КАК ТекДокТЧ
	|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрНакопления.ОстаткиНоменклатуры.Остатки(
	|				&МоментВремени,
	|				Номенклатура В
	|						(ВЫБРАТЬ
	|							ТекДокТЧ.Номенклатура КАК Номенклатура
	|						ИЗ
	|							ТекДокТЧ КАК ТекДокТЧ)
	|					И Склад = &Склад) КАК ОстаткиНоменклатурыОстатки
	|		ПО ТекДокТЧ.Номенклатура = ОстаткиНоменклатурыОстатки.Номенклатура";
	
	Запрос.УстановитьПараметр("ВидНоменклатуры", Перечисления.ВидыНоменклатуры.Товар);
	Запрос.УстановитьПараметр("МоментВремени", МоментВремени());
	Запрос.УстановитьПараметр("Склад", Склад);
	Запрос.УстановитьПараметр("Ссылка", Ссылка);
	
	РезультатЗапроса = Запрос.Выполнить();
	
	ВыборкаДетальныеЗаписи = РезультатЗапроса.Выбрать();
	
	Пока ВыборкаДетальныеЗаписи.Следующий() Цикл
		
		//Проверяем  наличие  достаточного количества
		//Выводим  ссобщение Номенклатура & Количество в наличии
		Если ВыборкаДетальныеЗаписи.Количество > ВыборкаДетальныеЗаписи.КоличествоОстаток  Тогда
			Сообщение = Новый СообщениеПользователю;
			Сообщение.Текст = "По  Номенклатуре  : " + ВыборкаДетальныеЗаписи.НоменклатураПредставление + " не хватает товара"
			+ "Реально есть : " + ВыборкаДетальныеЗаписи.КоличествоОстаток + " ед.";
			//Сообщение.Поле = "";
			//Сообщение.УстановитьДанные();
			Сообщение.Сообщить();
			
			//Отмена проведения
			Отказ =  Истина;			
			
			//Рекомендовано ВСЕ недостачи обработать
			//за ОДНУ попытку провдения
			Продолжить;	
		КонецЕсли;
		
		//Обрабатываем, НЕ ОТКАЗ 
		Если  НЕ Отказ Тогда 
			// регистр ОстаткиНоменклатуры Расход
			Движение = Движения.ОстаткиНоменклатуры.Добавить();
			Движение.ВидДвижения = ВидДвиженияНакопления.Расход;
			Движение.Период = Дата;
			Движение.Склад = Склад;
			Движение.Номенклатура = ВыборкаДетальныеЗаписи.Номенклатура;
			Движение.Количество = ВыборкаДетальныеЗаписи.Количество; 
			
			//Сумма списания = ЦенаСписания * Списываемое количество				
			//ЦенаСписания = Остаток по сумме / Остаток по количеству
			//Проблема копеек
			//Частный  вариант Решения	
			СуммаСписания = Движение.Количество / ВыборкаДетальныеЗаписи.КоличествоОстаток  *  ВыборкаДетальныеЗаписи.СуммаОстаток;	
			
			//Общий Вариант решения
			//проверяем что Количество в Документе равно Количеству на остатке
			//если Да  = >  Движение.Сумма =  СуммаОстаток
			//если нет  = > Пересчитываем пропорциоанально
			
			Движение.Сумма = СуммаСписания;
			
		КонецЕсли;
		
	КонецЦикла;
	Движения.ОстаткиНоменклатуры.Записывать = Истина;
	
	
	
КонецПроцедуры
